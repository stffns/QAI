# QA Intelligence - Configuration Template
# Copy this file to .env and configure with your actual values

# Database Configuration
DB_URL=sqlite:///./data/qa_intelligence.db
# Para PostgreSQL futuro: DB_URL=postgresql://user:pass@localhost:5432/qa_intelligence

# QA Agent Database Paths (with automatic directory creation)
QA_AGENT_DB_PATH=data/qa_conversations.db
QA_INTELLIGENCE_DB_PATH=data/qa_intelligence.db  
QA_RAG_DB_PATH=data/qa_intelligence_rag.db

# API Keys (opcional, algunos agentes pueden funcionar sin estas)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Configuration
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=2000

# Agent Configuration
AGENT_NAME=QA Intelligence Agent
AGENT_DESCRIPTION=Specialized QA Testing and Intelligence agent
ENABLE_MEMORY=true
ENABLE_REASONING=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/qa_intelligence.log

# Development flags
DEBUG_MODE=false
VERBOSE_LOGGING=false
